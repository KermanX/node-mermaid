{
  "name": "node-mermaid",
  "version": "1.0.0",
  "description": "Running mermaid in nodejs environment using node:env, jsdom and jssvg.",
  "homepage": "https://github.com/kermanx/node-mermaid#README",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.main.json",
    "build:test": "tsc --project tsconfig.test.json",
    "jest-raw": "jest",
    "jest": " cross-env NODE_OPTIONS=--experimental-vm-modules npm run jest-raw",
    "test": "npm run build:test && npm run jest"
  },
  "keywords": [
    "mermaid",
    "nodejs",
    "jsdom"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kermanx/node-mermaid"
  },
  "author": "_Kerman<KermanX@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.2.1",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "jsdom": "^22.0.0",
    "jssvg": "^1.0.0",
    "mermaid": "^10.1.0"
  }
}
